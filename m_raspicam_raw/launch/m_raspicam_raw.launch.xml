<launch>
  <!--Summary: Start nodes needed to support the Raspberry Pi camera. -->
  <!--Overview: The launch file for this directory starts the
  Raspberry Pi camera node and a node that uncompress the output that
  comes out of the Raspberry Pi GPU (Graphical Processing Unit.) -->

  <!-- Required arguments: -->
  <arg name="robot_base" />
    <!--robot_base: The robot base to use (e.g. "magni", "loki", etc.) -->
  <arg name="robot_host" />
    <!--robot_host: Is the robot DNS hostname to use (e.g. "betty.local"). -->
  <arg name="robot_user" />
    <!--robot_user: Is the user name to use on the robot. -->

  <!-- Convenience arguments: -->
  <arg name="root" value="$(find ubiquity_launches)" />
  <arg name="node" value="raspicam" />

  <!-- Remote robot machine -->
  <machine name="robot"
   address="$(arg robot_host)" user="$(arg robot_user)"
   env-loader="/tmp/env_loader.sh" />

  <!-- Start n_raspicam node: -->
  <include file="$(arg root)/n_$(arg node)/launch/n_$(arg node)1.launch.xml">
    <arg name="robot_base" value="$(arg robot_base)" />
    <arg name="robot_host" value="$(arg robot_host)" />
    <arg name="robot_user" value="$(arg robot_user)" />
  </include>
  
  <!-- Start n_image_uncompress node: -->
  <include file="$(arg root)/n_image_uncompress/launch/n_image_uncompress1.launch.xml">
    <arg name="camera_name" value="$(arg node)/camera" />
    <arg name="robot_base" value="$(arg robot_base)" />
    <arg name="robot_host" value="$(arg robot_host)" />
    <arg name="robot_user" value="$(arg robot_user)" />
  </include>

</launch>
