<!-- Run the fiducial_slam node -->
<launch>
  <!--Summary: Convert fiducial messages into a map and a localize. -->
  <!--Overview: This node will receive fiducial messages and create
      a map of fiducial locations and fiducial orientations.  Furthermore,
      node will generate a best estimate of the robot location based
      on the fiducial map. -->

  <!-- Required arguments: -->
  <arg name="robot_platform" />
    <!--robot_platform: The robot platform (e.g. "magni", "loki", etc.) -->
  <arg name="robot_dir" />
    <!--robot_dir: The robot launch files and parameters directory. -->
  <arg name="machine_name" default="robot"/>
    <!--machine_name: The machine name (i.e. "robot" or "viewer") -->
  <arg name="machine_host" />
    <!--machine_host: The DNS machine name (e.g. "ubuntu.local") -->
  <arg name="machine_user" />
    <!--machine_user: The user account on the machine. -->

  <arg name="camera_frame"/>
    <!--camera_frame: The name of the TF camera frame. -->
  <arg name="map_frame"/>
    <!--map_frame: The name of the TF map frame. -->
  <arg name="odom_frame"/>
    <!--odom_frame: The name of the odementry frame. -->
  <arg name="pose_frame"/>
    <!--odom_frame: The name of the pose frame. -->

  <!-- Optional arguments: -->
  <arg name="mapping_mode" default="false"/>
    <!--mapping_mode: Set to `true` to enable mapping and `false` to
        disable mapping. -->

  <machine name="$(arg machine_name)"
    address="$(arg machine_host)" user="$(arg machine_user)"
    env-loader="/tmp/env_loader.sh" />

  <node type="fiducial_slam.py" machine="$(arg machine_name)"
    pkg="fiducial_slam" output="screen" name="fiducial_slam">
    
    <param name="map_file" value="~/.ros/slam/map.txt" />
    <param name="obs_file" value="~/.ros/slam/obs.txt" />
    <param name="trans_file" value="~/.ros/slam/trans.txt" />
    <param name="mapping_mode" value="$(arg mapping_mode)" />
    <param name="camera_frame" value="$(arg camera_frame)" />
    <param name="map_frame" value="$(arg map_frame)" />
    <param name="odom_frame" value="$(arg odom_frame)" />
    <param name="pose_frame" value="$(arg pose_frame)" />
    <remap to="/fiducial_detect/fiducial_transforms" from="/fiducial_transforms"/>
  </node>
</launch>
