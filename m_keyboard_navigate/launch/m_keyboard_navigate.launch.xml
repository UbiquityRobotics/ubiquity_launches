<launch>
  <!-- Requrired arguments: -->
  <arg name="robot_platform" />
  <arg name="robot_name" />
  <arg name="robot_user" />

  <!-- Convenience arguments: -->
  <arg name="ul" value="$(find ubiquity_launches)" />
  <arg name="node" value="n_keyboard_navigate" />
  <arg name="mb" value="m_move_base" />

  <!-- Launch the move_base nodes: -->
  <include file="$(arg ul)/$(arg mb)/launch/$(arg mb).launch.xml">
    <arg name="robot_platform" value="$(arg robot_platform)"/>
    <arg name="robot_host" value="$(arg robot_host)"/>
    <arg name="robot_user" value="$(arg robot_user)"/>
  </include>

  <!-- Launch the keyboard drive node: -->
  <include file="$(arg ul)/$(arg node)/launch/$(arg node).launch.xml">
    <arg name="robot_platform" value="$(arg robot_platform)"/>
    <arg name="robot_host" value="$(arg robot_host)"/>
    <arg name="robot_user" value="$(arg robot_user)"/>
  </include>

</launch>
