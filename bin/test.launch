<launch>
  <!-- Required Arguments -->
  <arg name="robot_platform" />
    <!--robot_platform: The robot platform (e.g. "magni", "loki", etc.)  -->
  <arg name="robot_host" />
    <!--robot_host: Is the robot DNS hostname to use (e.g. "betty.local"). -->
  <arg name="robot_user" />
    <!--robot_user: Is the user name to use on the robot. -->

  <!-- We need a way to document Environment variables. -->

  <!-- Convenience Arguments -->
  <arg name="prefix_enable" value="$(optenv LEV_ROBOT_PREFIX_ENABLE)" />
  <arg name="launch_prefix$(arg prefix_enable)"
   value="$(optenv LEV_ROBOT_PREFIX
   xterm -fn 8x13 -e python -m pudb.run)" />
  <arg name="launch_prefix$(arg prefix_enable)1" value="" />

  <!-- Remote robot machine -->
  <machine name="robot"
   address="$(arg robot_host)" user="$(arg robot_user)"
   env-loader="/tmp/env_loader.sh" />

  <node machine="robot" name="robot_loop"
   pkg="ubiquity_launches" type="robot.py"
   launch-prefix="$(arg launch_prefix1)" />

</launch>
