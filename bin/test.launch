<launch>
  <!-- Required Arguments -->
  <arg name="robot_host" />
  <arg name="platform" />

  <machine name="robot"
   address="$(arg robot_host)" user="ubuntu"
   env-loader="/tmp/env_loader.sh" />

  <node machine="robot" name="robot_loop"
   pkg="ubiquity_launches" type="robot.py"
   launch-prefix="xterm -fn 9x15bold -e python -m pudb.run" />
</launch>
