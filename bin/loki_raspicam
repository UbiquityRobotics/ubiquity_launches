#!/usr/bin/env bash

# Start the node:
roslaunch ubiquity_launches m_raspicam_raw.launch.xml \
  robot_base:=loki framerate:=30 quality:=100 \
  camera_name:=/raspicam &

# Give the node a chance to start:
sleep 5

# Now start capturing images:
rosservice call /raspicam/camera/start_capture

# Wait until somebody stops us:
sleep 999999999

