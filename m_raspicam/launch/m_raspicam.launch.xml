    type="throttle" pkg="topic_tools"
    output="screen"
    args="messages /$(arg node)/camera/image/compressed 1.0 /$(arg node)/camera/image_slow/compressed"/>

  
    <node name="republish" machine="$(arg machine_name)"
    pkg="image_transport" type="republish"
    output="screen"
    args="compressed in:=/$(arg node)/camera/image_slow raw out:=$(arg output_prefix)/image_raw" /> -->

  <include 
   file="$(arg ul)/n_$(arg rsc)/launch/n_$(arg rsc).launch.xml">
    <arg name="robot_platform" value="$(arg robot_platform)" />
    <arg name="robot_dir" value="$(arg robot_dir)" />
    <arg name="machine_name" value="robot"/>
    <arg name="machine_host" value="$(arg robot_host)"/>
    <arg name="machine_user" value="$(arg robot_user)"/>

    <arg name="service_name" value="/n_raspicam/camera/start_capture" />
  </include>

</launch>
